{
  "name": "express-ts-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for Express servers utilizing typescript and postgres",
  "main": "server.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rimraf dist && echo \"Cleaned dist directory\"",
    "dev:bun": "bun --watch --smol run server.ts",
    "dev": "nodemon",
    "build": "npm run clean && tsc && tsc-alias",
    "start": "node dist/server.js"
  },
  "keywords": [
    "boilerplate",
    "server",
    "express",
    "postgres",
    "typescript"
  ],
  "type": "module",
  "author": "Suryansh Mishra",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "chalk": "^5.3.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.36.4",
    "drizzle-zod": "^0.5.1",
    "express": "^4.21.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "mongoose": "^8.8.1",
    "morgan": "^1.10.0",
    "pg": "^8.13.1",
    "winston": "^3.17.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.9.3",
    "@types/pg": "^8.11.10",
    "drizzle-kit": "^0.28.1",
    "nodemon": "^3.1.7",
    "rimraf": "^6.0.1",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}